
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title></title>
    <link rel="stylesheet" href="~/css/Site.css" />
    <link rel="stylesheet" href="~/css/zy.all.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/amazeui.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <script src="~/js/jquery-1.11.3.min.js"></script>
    @*<script src="~/js/jquery-1.7.2.min.js"></script>*@
    <script src="~/js/jquery.unobtrusive-ajax.js"></script>
    <script>
        function update(TextTypeId, id) {
            var num = $("#" + id).val();
            $.ajax({
                url: "/QuestionBank/UpdateTextTypeNum?num=" + num + "&id=" + id + "&TextTypeId=" + TextTypeId,
                type: "get",
                success: function (date) {
                    if (date > 1) {
                        alert("修改成功!");
                    }
                }
            })
        }


    </script>
</head>
<body>
    <div id="divapp" class="am-cf admin-main" style="padding-top: 0px;">
        <!-- content start -->

        <div class="am-cf admin-main" style="padding-top: 0px;">
            <!-- content start -->
            <div class="admin-content">
                <div class="admin-content-body">

                    <div class="am-g">
                        <div class="am-u-sm-12 am-u-md-4 am-u-md-push-8">

                        </div>
                        <div class="am-u-sm-12 am-u-md-8 am-u-md-pull-4"
                             style="padding-top: 30px;">
                            @foreach (var item in ViewBag.num)
                            {
                                <div class="am-form-group">
                                    <label for="user-name" class="am-u-sm-3 am-form-label">
                                        @item.ExamType
                                    </label>
                                    <input type="text" required id="@item.Id"  
                                           placeholder="显示数量" name="num" value="@item.Num">
                                    <input id="Button1" type="button" value="修改" onclick="update(@item.TextTypeId,@item.Id)" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <footer class="admin-content-footer">
                    <hr>
                    <p class="am-padding-left"></p>
                </footer>
            </div>
            <!-- content end -->
        </div>
    </div>
    <!-- end-->

   
</body>
</html>

